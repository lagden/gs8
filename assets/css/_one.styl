$gallery = 600

.gs
  center(960px, 20px)

.half
  col(1/2)
  +below(768px)
    stack()

.third
  col(1/3)
  +below(768px)
    stack()

.two-third
  col(2/3)
  +below(768px)
    stack()

.embed-responsive
  position relative
  display block
  height 0
  padding 0
  overflow hidden

  .embed-responsive-item,
  iframe,
  embed,
  object,
  video
    position absolute
    top 0
    left 0
    bottom 0
    height 100%
    width 100%
    border 0

// Modifier class for 16x9 aspect ratio
.embed-responsive--16x9
  padding-bottom 56.25%

// Modifier class for 4x3 aspect ratio
.embed-responsive--4x3
  padding-bottom 75%

// Flex Stuff
.flex,
.flex--row
  display flex
  flex-wrap mowrap
  justify-content flex-start
  align-items stretch

.flex--between
  justify-content space-between

.flex--center
  align-items center

.flex--col
  flex-direction column

.flex__child
  flex 1
  align-self auto

.flex__child--two
  flex 2

.flex__child--minimal
  flex 0 0 auto
  width 30px
  text-align right
  padding-right 10px

.pad-5
  padding 5px

.gallery
  img
    display: block
    height: $gallery * 1px

.highlight
  padding 30px
  border 1px rgba(gray, 0.2) solid
  border-width 1px 0 0
  margin-bottom 20px
  > h1
    text-align center
    margin 0
    font-family 'Quicksand', sans-serif

.article--dark
  background rgba(#0B141F, 0.8)
  padding-bottom 20px

.article--light
  background rgba(#0F1823, 0.7)
  padding-bottom 20px
