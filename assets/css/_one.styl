#navbar
  background-color rgba(black, 0.7)
  position fixed
  width 100vw
  top 0
  left 0
  > ul
    position relative
    padding 5px
    margin 0
    list-style none
    > li
      display inline-block

#navbar .active a
  background rgb(0,157,234)

.gs
  center(960px)

.half
  col(1/2)
  +below(768px)
    stack()

.third
  col(1/3)
  +below(768px)
    stack()

.two-third
  col(2/3)
  +below(768px)
    stack()

.imgfit
  max-width 100%
  object-fit contain
  +below(768px)
    width 100%

.embed-responsive
  position relative
  display block
  height 0
  padding 0
  overflow hidden

  .embed-responsive-item,
  iframe,
  embed,
  object,
  video
    position absolute
    top 0
    left 0
    bottom 0
    height 100%
    width 100%
    border 0

// Modifier class for 16:9 aspect ratio
.embed-responsive--16x9
  padding-bottom 56.25%

// Modifier class for 4:3 aspect ratio
.embed-responsive--4x3
  padding-bottom 75%

// Flex Stuff
.flex,
.flex--row
  display flex
  flex-wrap mowrap
  justify-content flex-start
  align-items stretch
  // align-content stretch

.flex--center
  align-items center

.flex--col
  flex-direction column

.flex__child
  flex 1
  align-self auto

.flex__child--two
  flex 2

.flex__child--minimal
  flex 0 0 auto
  width 30px
  text-align right
  padding-right 10px

.pad-5
  padding 5px

