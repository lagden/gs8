$gallery = 500

.pad-5
  padding 5px

.right
  text-align right

.center
  text-align center

.gs
  center(960px, 20px)

.half
  col(1/2)
  +below(768px)
    stack()
    margin-bottom 20px

.third
  col(1/3)
  +below(768px)
    stack()
    margin-bottom 20px

.two-third
  col(2/3)
  +below(768px)
    stack()
    margin-bottom 20px

p:last-of-type
  margin-bottom 30px
  +below(768px)
    margin-bottom 20px

.gallery
  img
    display block
    height $gallery * 1px

.highlight
  padding 30px
  border 1px rgba(gray, 0.2) solid
  border-width 1px 0 0
  margin-bottom 20px
  > h1
    text-align center
    margin 0
    font-family 'Quicksand', sans-serif

.article--dark
  background rgba(#0B141F, 0.8)
  padding-bottom 20px

.article--light
  background rgba(#0F1823, 0.7)
  padding-bottom 20px

.titleIcons
  border-radius 50%
  background-color rgba(blue, 0.3)
  color white
  padding 20px

.frm
  label
    display block
    margin-bottom 5px
  input[type=text],
  input[type=email],
  textarea
    box-sizing border-box
    padding 5px
    border-radius 5px
    width 100%
    color white
    background-color rgba(blue, 0.2)
    border 0

  textarea
    min-height 10em

  .btn
    padding 5px
    border-radius 5px
    color white
    background-color rgba(blue, 0.5)
    border 0

.frm__grupo
  position relative
  overflow hidden
  margin-bottom 20px

.contato__icons
  width 30px
  text-align right
  padding-right 10px

.infoTable
  td
    padding 5px
    text-align left
    &:first-child
      text-align right

.footer
  font-size 0.9em
  border 1px rgba(gray, 0.2) solid
  border-width 1px 0 0
  background rgba(#0B141F, 0.8)
  padding 20px 0

.footer--logo
  width 30px
  height 39px

.visuallyhidden
  border 0
  clip rect(0 0 0 0)
  height 1px
  margin -1px
  overflow hidden
  padding 0
  position absolute
  width 1px
  &.focusable
    &:active,
    &:focus
      clip auto
      height auto
      margin 0
      overflow visible
      position static
      width auto
