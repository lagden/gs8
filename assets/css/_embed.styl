.embed-responsive
  position relative
  display block
  height 0
  padding 0
  overflow hidden

  .embed-responsive-item,
  iframe,
  embed,
  object,
  video
    position absolute
    top 0
    left 0
    bottom 0
    height 100%
    width 100%
    border 0

// Modifier class for 16x9 aspect ratio
.embed-responsive--16x9
  padding-bottom 56.25%

// Modifier class for 4x3 aspect ratio
.embed-responsive--4x3
  padding-bottom 75%
