unstyledLink()
  color inherit
  text-decoration inherit
  &:active,
  &:focus
      outline none

a
  unstyledLink()

html
  background-color black
  background-position 50% 50%, 0 0
  background-attachment fixed, scroll
  background-repeat no-repeat, repeat
  background-size contain, 100px 56px
  background-image radial-gradient(circle farthest-corner at 50% 0%, rgba(#132435, 0.78) 0%, rgba(#0F1823, 0.97) 80%), url('../img/hexa.svg')

body
  color white
  font-family 'Roboto', sans-serif

.splash
  box-sizing border-box
  display flex
  justify-content center
  align-items center
  height 100vh
  padding 20px
  text-align center

.logo
  flex-grow 0
  flex-shrink 0
  flex-basis auto
  padding 10px
  > h1
    font-size 1.8em
  > img
    display block
    margin 0 auto
    width 60%

.about
  padding 20px
  table
    margin: 0 auto
    td
      padding 5px
      text-align left
      &:first-child
        text-align right

@media only screen and (orientation: portrait)
  .splash
    flex-direction column

  .logo
    padding 0
    font-size 80%
