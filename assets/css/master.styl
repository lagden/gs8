@import '_settings'

normalize-css()
base()

unstyledLink()
  color inherit
  text-decoration inherit
  &:active,
  &:focus
      outline none

a
  unstyledLink()


@font-face
  font-family 'FontAwesome'
  src url('../fonts/fontawesome-webfont.woff2') format('woff2'), url('../fonts/fontawesome-webfont.woff') format('woff')
  font-weight normal
  font-style normal

.fa
  display inline-block
  font normal normal normal 100% FontAwesome
  font-size: inherit
  text-rendering: auto
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  transform: translate(0, 0)

.fa-mobile:before
  content: '\f10b'

.fa-email:before
  content: '\f003'

html
  background-color black
  background-position 50% 50%, 0 0
  background-attachment fixed, scroll
  background-repeat no-repeat, repeat
  background-size contain, 100px 56px
  background-image radial-gradient(circle farthest-corner at 50% 0%, rgba(#132435, 0.78) 0%, rgba(31, 51, 88, 0.97) 80%), url('../img/hexa.svg')

body
  color white

.splash
  font-family 'Roboto', sans-serif
  height 100vh
  display flex
  flex-direction column
  justify-content center
  align-items center
  text-align center

.contato
  text-align left
  td
    padding 5px
    &:first-child
      text-align right

